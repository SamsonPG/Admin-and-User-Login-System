<div class="d-flex justify-content-center align-items-center flex-column mt-5 userlist">
   
        
            <p class="h3 text-black">User List</p>
            
            
                            
                            <div class="col-lg-12 col-xs-12">
                              <% if(message) { %>
                                <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                                  <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                                  <strong><%= message.message %></strong>
                                </div>
                                <% } %>
                              <div class="table-responsive userform">
                                <%if (users !='') {%>
                                  <table class="table table-striped text-center my-3 ">
                                    <thead>
                                      <tr class="table-dark">
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>E-Mail</th>
                                        <th>Password</th>
                                        <th>Action</th>
                                      </tr>
                                    </thead>
                                    <tbody>
                                      <% users.forEach((row, index)=>{%>
                                        <tr class="align-middle text-white table-dark">
                                          <td><%= index %></td>
                                          <td><%= row.name %></td>
                                          <td><%= row.email %></td>
                                          <td><%= row.password %></td>
                                          <td>
                                            <a href="/edit/<%= row._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                            <a href="/delete/<%= row._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                          </td>
                                        </tr>
                                      <%})%>
                                    </tbody>
                                  </table>
                                  <% } else {%>
                                    <p class="h5 text-white text-center mt-5">No users found in the database!</p><% } %>
                              </div>
                            </div>

                            <p class="h3 text-black">Admin Details</p>

                            <div class="col-lg-12 col-xs-12">
                              <div class="table-responsive userform">
                                <%if (admin !='') {%>
                                  <table class="table table-striped text-center my-3 ">
                                    <thead>
                                      <tr class="table-dark">
                                        <th>ID</th>
                                        <th>E-Mail</th>
                                        <th>Password</th>
                                        <th>Action</th>
                                      </tr>
                                    </thead>
                                    <tbody>
                                      <% admin.forEach((row, index)=>{%>
                                        <tr class="align-middle text-white table-dark">
                                          <td><%= index %></td>
                                          <td><%= row.email %></td>
                                          <td><%= row.password %></td>
                                          <td>
                                            <a href="/edit/<%= row._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                            <a href="/delete/<%= row._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                          </td>
                                        </tr>
                                      <%})%>
                                    </tbody>
                                  </table>
                                  <% } else {%>
                                    <p class="h5 text-white text-center mt-5">No admin found in the database!</p><% } %>
                              </div>
                            </div>
                          
                    
                    
                      
                  
                    

  
              </div>
            
        
              <script>    
                window.history.pushState(null, null, window.location.href);
                window.onpopstate = function () {
                    window.history.go(1);
                    };</script>

